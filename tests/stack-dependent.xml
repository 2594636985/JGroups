<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="stack-dependent"
       parallel="tests"
       thread-count="1" >

    <test name="stack-dependent" junit="false">
        <groups>
            <run>
                <exclude name="functional"/>
            </run>
        </groups>
        <packages>
            <package name="org.jgroups.tests.*"/>
            <package name="org.jgroups.blocks.*"/>
            <package name="org.jgroups.protocols.*"/>
        </packages>
    </test>

</suite>
