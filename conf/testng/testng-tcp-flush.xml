<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="tcp-flush"
       parallel="methods"
       thread-count="15"
        >

	<parameter name="channel.conf" value="flush-tcp.xml"/>
	<parameter name="use_blocking" value="true"/>
    <test name="tcp-flush" junit="false">        
        <groups>
            <run>
                <include name="stack-dependent"/>
                <include name="flush"/>
                <exclude name="temp"/>
                <exclude name="temp2"/>
                <exclude name="vlad"/>
            </run>
        </groups>
        <packages>
            <package name="org.jgroups.tests.*"/>
            <package name="org.jgroups.blocks.*"/>
            <package name="org.jgroups.protocols.*"/>
        </packages>
    </test>

</suite>
