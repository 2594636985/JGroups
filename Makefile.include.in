# This file is included by all of the JavaGroups makefiles.
# It is generated by running configure.pl.

# Classpath.
JG_BASE_DIR    = @JG_BASE_DIR@
USER_CLASSPATH = $(CLASSPATH):$(JIKESPATH)
TEST_CLASSPATH = $(JG_BASE_DIR)/lib/junit.jar:$(JG_BASE_DIR)/lib/jms.jar
SRCDIR         = $(JG_BASE_DIR)/src
OUTPUTDIR      = $(JG_BASE_DIR)/classes
CLASSDIR       = $(JG_BASE_DIR)/classes/org/javagroups
JG_CLASSPATH   = $(OUTPUTDIR):$(USER_CLASSPATH):$(TEST_CLASSPATH):$(SRCDIR)



# Commands.
JAVAC = @JAVAC@
DOC = javadoc
JAR = jar

# Flags to use when compiling Java files.
JFLAGS = @JFLAGS@ -d $(OUTPUTDIR) -classpath $(JG_CLASSPATH)

.SUFFIXES: .java .class



%.class : %.java
	@(echo "Compiling $^" ; $(JAVAC) $(JFLAGS) $^)

